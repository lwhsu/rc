[alias]
	ann = blame
	br = branch -vv
	bra = branch -vv -a
	ci = commit
	co = checkout
	di = diff
	dif = diff
	gl = log --graph --pretty=oneline --
	glog = log --all --decorate --graph --
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all --
	st = status --short
	up = pull
	vimdiff = difftool
[user]
	name = Li-Wen Hsu
	email = lwhsu@lwhsu.org
	signingkey = 0x8D7BCC7D012FD37E
[diff]
	color = auto
	tool = vimdiff
[color]
	ui = auto
[core]
	safecrlf = true
[branch]
	autosetuprebase = always
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	prompt = false
[commit]
	gpgsign = true
